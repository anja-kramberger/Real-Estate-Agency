@model AgencijaZaNekretnine.Models.PreduzimacBO

@{
    ViewData["Title"] = "Create";
}



<h2>Create</h2>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body edit">
                <div class="row">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <div class="col-md-6">
                                <label asp-for="Naziv" class="control-label"></label>
                                <input asp-for="Naziv" class="form-control" />
                                <span asp-validation-for="Naziv" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    <label asp-for="BrojNekretnina" class="control-label"></label>
                                    <input asp-for="BrojNekretnina" class="form-control" />
                                    <span asp-validation-for="BrojNekretnina" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-8">
                                <label asp-for="Opis" class="control-label"></label>
                                <textarea asp-for="Opis" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="Opis" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row" style="text-align:center;">
                                <div class="col-md-6">
                                    <input type="submit" value="Sacuvaj izmene" class="btn btn-warning btn-sm" />
                                </div>
                                <div class="col-md-6">
                                    <a type="button" class="btn btn-primary btn-sm" asp-action="Index" style="height:45px !important; text-align:center; padding-top: 10px;">Vrati se nazad</a>
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles{
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link href="~/css/zaposleni.css" rel="stylesheet" />
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}




