@model AgencijaZaNekretnine.Models.UgovorBO

@{
    ViewData["Title"] = "Create";
}

<h2>Novi Ugovor</h2>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body ">
                <div class="row">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    <label asp-for="Nekretnina.Id" class="control-label">Adresa</label><br />
                                    <select id="NekretninaID" asp-for="Nekretnina.Id"
                                            asp-items="@(new SelectList(ViewBag.Nekretnine, "Id", "Adresa"))" 
                                            onchange="getNekretnina(this.value)" > 
                                        <option disabled selected>Odaberi Nekretninu</option>
                                    </select>
                                    <span asp-validation-for="Nekretnina.Id" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">

                                    <label class="control-label">Cena: </label>
                                    <input id="uploadedFile" name="uploadedFile" type="text" class="form-control" readonly />
                                    
                                </div>
                            </div>

                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    <label asp-for="PunoIme" class="control-label"></label>
                                    <input id="PunoIme" asp-for="PunoIme" class="form-control" />
                                    <span asp-validation-for="PunoIme" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Jmbg" class="control-label"></label>
                                    <input id="Jmbg" asp-for="Jmbg" class="form-control" />
                                    <span asp-validation-for="Jmbg" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    <label asp-for="BrojTelefona" class="control-label"></label>
                                    <input id="BrojTelefona" asp-for="BrojTelefona" class="form-control" />
                                    <span asp-validation-for="BrojTelefona" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Placanje.Id" class="control-label">Placanje</label><br />
                                    <select id="selekt" asp-for="Placanje.Id"
                                            asp-items="@(new SelectList(ViewBag.Placanje, "Id", "NacinPlacanja"))">
                                        <option disabled selected>Odaberi Način Plaćanja</option>
                                    </select>
                                    <span asp-validation-for="Placanje.Id" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <label asp-for="Pdf" class="control-label">Pdf nekretnine: </label><br />
                                <input asp-for="Pdf" type="file" class="form-control" />
                                <span asp-validation-for="Pdf" class="text-danger"></span>
                            </div>
                        </div>
                        <div>
                            <input type="hidden" value="Agent.Id" name="agent" />
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="control-label">Procenat agenta: </label>
                                        <div class="col-md-9"><input id="percentage" name="percentage" type="text" class="form-control" /></div>
                                        <div class="col-md-3" style="float: right; padding: 0 10px;">
                                            <div class="col-md-6"><input type="button" id="btnProcenat" name="btnProcenat" class="btn btn-danger" onclick="getPercent()" value="Izracunaj"></div>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Iznos" class="control-label"></label>
                                    <input id="Iznos" asp-for="Iznos" class="form-control" readonly />
                                    <input id="NekretninaId" type="hidden" />
                                    <span asp-validation-for="Iznos" class="text-danger"></span>
                                </div>
                            </div>

                        </div>
                        <div class="form-group">
                            <div class="row" style="text-align:center;">
                                <div class="col-md-4">
                                    <button type="submit" class="btn btn-primary" asp-action="Download" asp-controller="Ugovor" value="@Model">
                                        <i class="fa-solid fa-print" style="color: #ffff"></i>  Štampaj
                                    </button>
                                </div>
                                <div class="col-md-4">
                                    <input type="submit" value="Sacuvaj izmene" class="btn btn-warning btn-sm" />
                                </div>
                                
                                <div class="col-md-4">
                                    <a type="button" class="btn btn-primary btn-sm" asp-action="Index" style="height:45px !important; text-align:center; padding-top: 10px;">Vrati se nazad</a>
                                </div>
                            </div>

                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles{
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link href="~/css/nekretnina.css" rel="stylesheet" />
}

<script type="text/javascript">
    
    function getPercent() {
            var NekretninaID = document.getElementById("NekretninaID").value
            var percent = document.getElementById("percentage").value
            //alert(NekretninaID + percent);
            $.ajax({
                url: '@Url.Action("getPercent", "Ugovor")',
                data: { 'NekretninaID': NekretninaID, 'percent': percent },
                type: 'POST',
                dataType: 'JSON',
                success: function (data) {
                    console.log(data);
                    $("#Iznos").val(parseFloat(data[0]).toFixed(2));
                    $("#NekretninaId").val(data[1]);
                },
                error: function (data) {
                    alert("Greska");
                }
            });
    }
</script>
<script type="text/javascript">
    function getNekretnina(Sle) {
        $.ajax({
            url: '@Url.Action("getNekretnina", "Ugovor")',
            data: { "NekretninaID": Sle },
            type: 'POST',
            dataType: 'JSON',
            success: function (data) {
                console.log(data);
                $("#uploadedFile").val(parseFloat(data).toFixed(2));
            },
            error: function (data) {
                alert("Nisu uneti svi podaci");
            }
        });
    }
    function Download() {
        var NekretninaID = document.getElementById("NekretninaID").value
        var PunoIme = document.getElementById("PunoIme").value
        var Jmbg = document.getElementById("Jmbg").value
        var BrojTelefona = document.getElementById("BrojTelefona").value
        var Iznos = document.getElementById("Iznos").value
        $.ajax({
            url: '@Url.Action("Stampaj", "Ugovor")',
            data: {"NekretninaID": NekretninaID, "PunoIme": PunoIme, "Jmbg": Jmbg, "BrojTelefona": BrojTelefona, "Iznos": Iznos},
            type: 'POST',
            dataType: '',
            success: function (data) {
                if (data == "error") {
                    alert(data);
                }
                else {
                    Stampanje(data);
                }
            }
            
        });
    }
    function Stampanje(data){
        $.ajax({
            url: '@Url.Action("Download", "Ugovor")',
            data: { "NekretninaID": data[0], "PunoIme": data[1], "Jmbg": data[2], "BrojTelefona": data[3], "Iznos": data[4] },
            type: 'POST',
            success: function (data) {
                alert(data);
            }
        });
    }
</script>
<script type="text/javascript">
</script>
@section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        };
}