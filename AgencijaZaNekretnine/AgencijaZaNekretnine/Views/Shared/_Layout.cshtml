<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="description" content="Agencija Za Prodaju nekretnina"/>
    <meta name="keywords" content="ASP.Net, Identity, CSS, HTML" />
    <meta name="author" content="Anja Kramberger"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AgencijaZaNekretnine</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">*@
    <link rel="stylesheet" href="~/css/all.min.css" />
    @*<link rel="stylesheet" href="~/css/sweetalert.js" />*@
    <link rel="stylesheet" href="~/css/toastr.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @*<link rel="stylesheet" href="~/css/sidebar.css" />*@
    <link rel="stylesheet" href="~/css/mainStyle.css" />
    <link rel="stylesheet" href="~/css/pagination.css" />
    <link rel="stylesheet" href="~/AgencijaZaNekretnine.styles.css" asp-append-version="true" />

</head>
<body>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="wrapper">
            <aside id="sidebar">
                <div class="d-flex">
                    <button class="toggle-btn" type="button">
                        <i class="fa-brands fa-adn fa-flip fa-xl" style="color:#ed890e; height:27px; width:27px;"></i>
                    </button>
                    <div class="sidebar-logo">
                        <a href="">Agencija</a>
                    </div>
                </div>
                <ul class="sidebar-nav">
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="sidebar-item" >
                            <a class="sidebar-link" asp-area="" asp-controller="Dashboard" asp-action="Index">
                                <i class="fa-solid fa-display"></i>
                                <span>Početna strana</span>
                            </a>
                        </li>
                        <li>
                            <a class="sidebar-link" asp-area="" asp-controller="Zaposleni" asp-action="Confirmation">
                                <i class="fa-solid fa-user-plus"></i>
                                <span>Potvrdi</span>
                            </a>
                        </li>
                        <li>
                            <a class="sidebar-link" asp-area="" asp-controller="Preduzimac" asp-action="Index">
                                <i class="fa-solid fa-building"></i>
                                <span>Preduzimači</span>
                            </a>
                        </li>
                        <li>
                            <a class="sidebar-link" asp-area="" asp-controller="Zaposleni" asp-action="Index">
                                <i class="fa-solid fa-user-tie"></i>
                                <span>Zaposleni</span>
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("Menadzer"))
                    {
                        <li class="sidebar-item" >
                            <a class="sidebar-link" asp-area="" asp-controller="Dashboard" asp-action="Index">
                                <i class="fa-solid fa-display"></i>
                                <span>Početna strana</span>
                            </a>
                        </li>
                        <li>
                            <a class="sidebar-link" asp-area="" asp-controller="Nekretnina" asp-action="Index">
                                <i class="fa-solid fa-city"></i>
                                <span>Nekretnine</span>
                            </a>
                        </li>
                        <li>
                            <a class="sidebar-link" asp-area="" asp-controller="Statistika" asp-action="StatistikaAgencije">
                                <i class="fa-solid fa-chart-line"></i>
                                <span>Statistika Agencije</span>
                            </a>
                        </li>
                        <li>
                            <a class="sidebar-link" asp-area="" asp-controller="Statistika" asp-action="StatistikaSvihAgenata">
                                <i class="fa-solid fa-chart-column"></i>
                                <span>Statistika Agenata</span>
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("Agent"))
                    {
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-area="" asp-controller="Dashboard" asp-action="Index">
                                <i class="fa-solid fa-display"></i>
                                <span>Početna strana</span>
                            </a>
                        </li>
                        <li>
                            <a class="sidebar-link" asp-area="" asp-controller="Nekretnina" asp-action="Index">
                                <i class="fa-solid fa-city"></i>
                                <span>Nekretnine</span>
                            </a>
                        </li>
                        <li>
                            <a class="sidebar-link" asp-area="" asp-controller="Rezervacija" asp-action="Index">
                                <i class="fa-solid fa-book"></i>
                                <span>Rezervacije</span>
                            </a>
                        </li>
                        <li>
                            <a class="sidebar-link" asp-area="" asp-controller="Ugovor" asp-action="Index">
                                <i class="fa-solid fa-file-contract"></i>
                                <span>Ugovor</span>
                            </a>
                        </li>
                    }
                </ul>
            </aside>
            <div class="main">
                <nav class="navbar navbar-expand ">@*px-4 py-3*@ @*<nav class="navbar navbar-expand px-4 py-3">*@
                    <form action="#" class="d-none d-sm-inline-block">
                    </form>
                    <div class="navbar-collapse collapse"> @*<div class="navbar-collapse collapse">*@
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item dropdown">
                                <div class="nav-icon" style="float:right;">
                                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                        <button style="float:right;" type="submit" class="nav-link btn btn-link text-dark"><i class="fa-solid fa-power-off"></i> Logout</button>
                                    </form>
                                </div>
                                <div class="dropdown-menu dropdown-menu-end rounded">

                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
                <main class="align-content-around "> @*px-3 py-4*@
                    <div class="container-fluid">
                        <div class="mb-3">
                            @RenderBody()
                        </div>
                    </div>
                </main>
                <div class="footer">
                    <div class="container">
                        &copy; @DateTime.Now.Year - Agencija Za Nekretnine @*- <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>*@
                    </div>
                </div>
            </div>
        </div>
    }
    @if (!User.Identity.IsAuthenticated)
    {
        <div class="container">
            <main role="main" class="pb-3">
               @RenderBody()
            </main>
        </div>
    }



   

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @*<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>*@
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @*<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>*@
    <script src="~/js/sidebar.js" type="text/javascript"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/all.min.js" type="text/javascript"></script>
    @*<script src="~/js/sweetalert1.js" type="text/javascript"></script>
    <script src="~/js/sweetalert2.js" type="text/javascript"></script>*@
    <script src="~/js/sweetalert.min.js" type="text/javascript"></script>
    <script src="~/js/toastrjs.js" type="text/javascript"></script>
    <script src="~/js/toastrjs.js" type="text/javascript"></script>
    <script src="~/js/toastr.js" type="text/javascript"></script>
    
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("Styles", required: false)
</body>
</html>
