@model AgencijaZaNekretnine.Models.UserBO

@{
    ViewData["Title"] = "Edit";
}

<h2 >Edit</h2>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body edit">
                    <div class="row">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group" style="text-align:center; font-size:1.5em;">
                            <label class="control-label" style="text-align:center;">Radnik:   @Model.UserName</label>
                            
                        </div>
                        <div class="form-group">
                            <div class="col-md">
                                <label class="control-label">Trenutno zaposlen</label> @*asp-for="Employed" *@
                                <input type="checkbox" asp-for="Employed" height="50px" width="50px" style="width:15px; height:15px; margin-left:10px;"/> @* value="@ViewBag.Employed"  *@
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    <label class="control-label">Ime</label> @*asp-for="FirstName"*@
                                    <input asp-for="FirstName" class="form-control" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="control-label">Prezime</label> @*asp-for="LastName"*@
                                    <input asp-for="LastName" class="form-control" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                            
                        </div>
                        <div class="form-group">
                            <div class="col-md">
                                <label class="control-label">Broj Telefona</label> @*asp-for="Phone"*@
                                <input asp-for="Phone" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            
                        </div>
                        <div class="form-group">
                            <div class="row" style="text-align:center;">
                                <div class="col-md-6">
                                    <input type="submit" value="Sacuvaj izmene" class="btn btn-warning btn-sm" />
                                </div>
                                <div class="col-md-6">
                                    <a type="button" class="btn btn-primary btn-sm" asp-action="Index" style="height:45px !important; text-align:center; padding-top: 10px;">Vrati se nazad</a>
                                </div>
                            </div>
                            
                        </div>
                    </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

@section Styles{
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link href="~/css/zaposleni.css" rel="stylesheet" />
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
