@model IPagedList<AgencijaZaNekretnine.Models.UserBO>
@using X.PagedList;
@using X.PagedList.Mvc.Core;

@{
    ViewData["Title"] = "Index";

    var met = ViewBag.Metoda;

    var controllerName = this.ViewContext.RouteData.Values["controller"].ToString();

    
}

<div>
    <div class="row" >
        <div class="col-md-12">
            <h2>Lista Zaposlenih</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body " style="margin:0 40px;">
                    <form asp-action="Index">
                        <div class="row" style="margin-bottom:30px;">
                            <div class="col-md">
                                <label>Pretraga</label>
                                <input type="text" name="searchString" value="@ViewBag.CurrentFilter" /><br>
                                <input type="hidden" name="searchRole" value="@ViewBag.CurrentRole" /><br>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    @*<label>Uloga</label>*@
                                    @Html.DropDownList("Role",new SelectList(ViewBag.Role, "Id", "Name"),
                                    "Selektuj Ulogu",new{@class = "form-control"})
                                </div>
                                <div class="col-md-4">
                                    <input type="submit" value="Search" class="btn btn-outline-warning btn-sm" />
                                    <a type="button" class="btn btn-outline-warning btn-sm" asp-action="Index">Prikazi sve</a>
                                </div>
                            </div>
                        </div>
                        
                    </form>
                        <div class="row" style="margin-bottom: 30px;">
                            <div class="col-md-12">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayName("Uloga")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Email")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Zaposlen")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Ime")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Prezime")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Telefon")
                                            </th>
                                            <th>
                                                Action
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    
                                                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Email)
                                                </td>
                                            <td style="text-align:left;">
                                                    @if(item.Employed == true){
                                                        <i class="fa-solid fa-check" style="color:green; text-align:left;"></i>
                                                    }
                                                    else{
                                                    <i class="fa-solid fa-xmark" style="color:red; text-align:left;"></i>
                                                    }
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FirstName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.LastName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Phone)
                                                </td>
                                                <td>
                                                    <a type="button" class="btn btn-outline-primary" href="@Url.ActionLink("Edit", "Zaposleni", new { item.Id })">Edit</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    <div class="row" style="margin-bottom: 30px;">
                            <div>
                                <div class="pagination" style="display:inline-block; vertical-align:middle">
                                    @if (Model.PageCount > 1)
                                    {
                                        @Html.PagedListPager(Model, page => Url.Action("Index", new
                                    {
                                    page ,
                                    currentFilter = ViewBag.CurrentFilter,
                                    currentRole = ViewBag.CurrentRole
                                    }))
                                    }
                                </div>

                            </div>
                        </div>
                    
                    
                </div>
            </div>
        </div>
    </div>

</div>
@section Styles{
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link href="~/css/zaposleni.css" rel="stylesheet" />
}